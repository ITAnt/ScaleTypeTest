<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总结：图片直接拉伸或缩放到View的大小，填满整个View，不必考虑比例"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View与图片等宽等高"/>
            <ImageView
                android:layout_width="256px"
                android:layout_height="128px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View的宽高均大于图片宽高"/>
            <ImageView
                android:layout_width="512px"
                android:layout_height="512px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View的宽大于图片，高相等"/>
            <ImageView
                android:layout_width="512px"
                android:layout_height="128px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View的高大于图片，宽相等"/>
            <ImageView
                android:layout_width="256px"
                android:layout_height="512px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View的宽高都小于图片"/>
            <ImageView
                android:layout_width="96px"
                android:layout_height="96px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View的宽小于图片，高相等"/>
            <ImageView
                android:layout_width="96px"
                android:layout_height="128px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View的高小于图片，宽相等"/>
            <ImageView
                android:layout_width="256px"
                android:layout_height="96px"
                android:src="@drawable/cat_256"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
